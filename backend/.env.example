# Database
DB_HOST=localhost
DB_PORT=27017
DB_DATABASE=easygenerator
DB_USERNAME=  # Optional, if MongoDB requires authentication
DB_PASSWORD=  # Optional, if MongoDB requires authentication

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Auth Mode (cookie or body) ?? fallback value
AUTH_MODE=cookie

# Server
PORT=3000
NODE_ENV=production

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
